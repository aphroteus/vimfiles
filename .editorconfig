# top-most EditorConfig file
root = true

# For all Vimscript files (including vimrc and .vim files)
[{*.vim,vimrc}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# For Git configuration files
[{.gitattributes,.gitignore,.gitmodules}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# For Markdown files
[*.md]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false
